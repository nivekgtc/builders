{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["app/*"]
    },
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "App.js",
    "app",
    "test",
    "storybook"
  ],
  "extends": "expo/tsconfig.base"
}
